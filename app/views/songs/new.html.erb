<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title" %>
  </p>
  <p>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, placeholder: "Artist Name" %>
  </p>
  <p>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "genres", placeholder: "Select A Genre"%>
  <datalist id="genres">
    <%= Genre.all.each do |genre| %>
      <option value="<%= genre.name %>" name="<%= genre.id %>" id="<%= genre.id %>"></option>
    <% end %>
  </datalist>
  </p>
  <p>
  <%= f.label :notes %>
  <input type-"text" name="song[notes][]" id="song_notes_1" placeholder="Note 1">
  <input type-"text" name="song[notes][]" id="song_notes_2" placeholder="Note 2">
  </p>

  <%= f.submit %>
<% end %>